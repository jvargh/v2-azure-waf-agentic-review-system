#############################################################
# Azure Well-Architected Agents Environment Template
# Copy to .env (which is git-ignored) and fill real values.
# Do NOT commit actual secrets. Rotate any leaked keys.
#############################################################

# LLM Configuration - Choose ONE option below:

# Option 1: Azure AI Foundry (Recommended)
# AZURE_AI_PROJECT_ENDPOINT=https://your-ai-foundry-name.services.ai.azure.com
# AZURE_AI_MODEL_DEPLOYMENT_NAME=gpt-4o-mini

# Option 2: Azure OpenAI (Direct)
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=REPLACE_WITH_SECURE_KEY
AZURE_OPENAI_API_VERSION=2024-10-21

# Azure OpenAI Unified Provider - Deployment Configuration
AZURE_OPENAI_CHAT_FAST_DEPLOYMENT=gpt-4o-mini        # For prompts < 600 tokens
AZURE_OPENAI_CHAT_QUALITY_DEPLOYMENT=gpt-4o          # For prompts >= 600 tokens
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small
AZURE_OPENAI_VISION_DEPLOYMENT=gpt-4o-mini

# Feature Flags
LLM_ENABLED=true
EMBEDDINGS_ENABLED=true
VISION_ENABLED=true
ENABLE_HYBRID_SHADOW=false

# Operational Controls - Resilience & Performance
AZURE_OPENAI_MAX_CONCURRENT=6
AZURE_OPENAI_RATE_LIMIT_PER_SEC=8
AZURE_OPENAI_RETRY_ATTEMPTS=4
AZURE_OPENAI_RETRY_BACKOFF=0.75
AZURE_OPENAI_FAST_THRESHOLD_TOKENS=600

# Managed Identity (Optional - recommended for Azure-hosted apps)
AZURE_USE_MANAGED_IDENTITY=false

# Authentication (Service Principal - optional)
AZURE_CLIENT_ID=your_service_principal_client_id
AZURE_CLIENT_SECRET=your_service_principal_secret
AZURE_TENANT_ID=your_azure_tenant_id

# Observability / Telemetry
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=REPLACE;IngestionEndpoint=https://REPLACE.dc.applicationinsights.azure.com/;LiveEndpoint=https://REPLACE.livediagnostics.monitor.azure.com/

# MCP / Search Configuration (optional)
AZURE_SEARCH_ENDPOINT=https://your-search-resource.search.windows.net
AZURE_SEARCH_API_KEY=REPLACE_WITH_SEARCH_KEY

# Agent Configuration
RELIABILITY_AGENT_NAME=ReliabilityFrameworkAgent
SECURITY_AGENT_NAME=SecurityFrameworkAgent
COST_AGENT_NAME=CostOptimizationAgent
OPERATIONAL_AGENT_NAME=OperationalExcellenceAgent
PERFORMANCE_AGENT_NAME=PerformanceEfficiencyAgent

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Cache Settings
CACHE_TTL_HOURS=24
ENABLE_CACHE=true

# MongoDB (optional persistence)
MONGODB_CONNECTION_STRING=mongodb://localhost:27017
MONGODB_DATABASE=well_architected
MONGODB_COLLECTION=assessments

# Reliability / Scoring (optional overrides)
RELIABILITY_ASSESSMENT_MODE=comprehensive
RELIABILITY_SCORING_WEIGHTS={"availability":0.25,"resiliency":0.25,"operations":0.20,"backup_restore":0.15,"monitoring":0.15}

# Security: Rotate any key placed here immediately after first use in CI.
# End of template